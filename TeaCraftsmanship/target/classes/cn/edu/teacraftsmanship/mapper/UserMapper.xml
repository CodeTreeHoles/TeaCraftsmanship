<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.teacraftsmanship.mapper.UserMapper">
    <update id="update" parameterType="cn.edu.teacraftsmanship.pojo.User">
        UPDATE user
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="personalProfile != null">personal_profile = #{personalProfile},</if>
            <if test="sex != null">sex = #{sex},</if>
            <if test="avatarUrl != null and avatarUrl != ''">avatar_url = #{avatarUrl},</if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>